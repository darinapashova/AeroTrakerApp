<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    tools:context=".TrainingPlan">
    <!--recycler view for displaying our athletes-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVAthletes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1047dp" />

    <Button
        android:id="@+id/btnAddPhysicalPrep"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="add physical preparation"
        android:backgroundTint="@color/PeachPuff"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btndownload"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/PaleVioletRed"
        android:text="Download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnAddPhysicalPrep" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="Show"
        android:backgroundTint="@color/DarkSlateBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btndownload" />
</androidx.constraintlayout.widget.ConstraintLayout>